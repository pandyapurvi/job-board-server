<%= form_for @employer do |f| %>

<%= f.label :company_name %>
<%= f.text_field :company_name%>
<%= f.label :compamy_type %>
<%= f.text_field :compamy_type %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :no_employee %>
<%= f.number_field :no_employee, :min=>'0' %>
<%= f.label :size %>
<%= f.text_field :size %>
<%= f.label :city %>
<%= f.text_field :city %>
<%= f.label :website %>
<%= f.text_field :website %>
<%= f.label :job_id %>
<%= f.select :job_id, Job.pluck(:title,:id), :include_blank => true %>
<%= f.submit %>
<% end %>
